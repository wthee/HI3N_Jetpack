<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="video"
            type="cn.wthee.hi3njetpack.data.Video"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="longClick"
            type="android.view.View.OnLongClickListener"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}"
        android:onLongClick="@{longClick}">

        <FrameLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:imageFromUrl="@{video.imgurl}"/>

            <TextView
                android:id="@+id/video_length"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_gravity="right|bottom"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                android:text="@{video.length}"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/video_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@id/image">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text"
                android:textSize="@dimen/text"
                android:text="@{video.title}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/video_title"
                android:padding="3dp">

                <TextView
                    android:id="@+id/video_uper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:textSize="@dimen/text_small"
                    android:text="@{video.uper}"/>

                <TextView
                    android:id="@+id/video_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:textSize="@dimen/text_small"
                    android:text="@{video.watchNum}"/>

                <TextView
                    android:id="@+id/video_danmu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:textSize="@dimen/text_small"
                    android:text="@{video.danmuNum}"/>

                <TextView
                    android:id="@+id/video_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|right"
                    android:textSize="@dimen/text_small"
                    android:text="@{video.date}"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:background="@drawable/fgline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fgLine"/>

    </RelativeLayout>


</layout>
